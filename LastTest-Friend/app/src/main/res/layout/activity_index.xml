<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff"
    tools:context="com.example.zyj.lasttest.Index">

    <ImageView
        android:id="@+id/beijing_img"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/beijing" />

    <Button
        android:id="@+id/back_button"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:text="退出"
        android:textColor="@drawable/button_color" />

    <Button
        android:id="@+id/photo_button"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_camera" />

    <TextView
        android:id="@+id/name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginTop="120dp"
        android:layout_toLeftOf="@+id/tx_img"
        android:text="网名"
        android:textColor="#ffffffff"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/tx_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/tx" />

    <ListView
        android:id="@+id/listview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tx_img"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

    </ListView>

</RelativeLayout>
